    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
    <script src="~/Scripts/SalesApplication/Report.js"></script>
    <script>
        $(document).ready(function () {
            objReport.init();
        });

    </script>
</body>

</html>
